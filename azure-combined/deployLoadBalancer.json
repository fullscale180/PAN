{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {

		"location": {
			"type": "string",
			"metadata": {
				"description": "Deployment location"
			}
		},

		// vnet parameters
		"virtualNetworkName": {
			"type": "string",
			"metadata": {
				"description": "Name of the Virtual Network (VNET)"
			}
		},
		"trustedSubnetName": {
			"type": "string",
			"metadata": {
				"description": "Subnet for Trust"
			}
		},
		
		// load balancer parameters
		"loadBalancerName": {
			"type": "string",
			"metadata": {
				"description": "This is the name of the inbound load balancer"
			}
		},
		"routeTableName": {
			"type": "string",
			"defaultValue": "routes-rt",
			"metadata": {
				"description": "This is the name of the route table"
			}
		}
	},

	"variables": {
		"vnetId": "[resourceId('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]",
		"lbId": "[resourceId('Microsoft.Network/loadBalancers/', parameters('loadBalancerName'))]"
	},

	"resources": [

		// Setup load balancer
		{ 
			"apiVersion": "2015-05-01-preview",
			"type": "Microsoft.Network/loadBalancers",
			"name": "[parameters('loadBalancerName')]",
			"location": "[parameters('location')]",
			"properties": {
				"frontendIPConfigurations": [
					{
						"name": "Frontend",
						"properties": {
							"subnet": {
								"id": "[concat(variables('vnetId'),'/subnets/',parameters ('trustedSubnetName'))]"
							},
							"privateIPAllocationMethod": "Dynamic" 
						}
					}
				],
				"backendAddressPools": [
					{
						"name": "BackendPool"
					}
				],
				"loadBalancingRules": [
					{
						"properties": {
							"frontendIPConfiguration": {
								"id": "[concat(variables('lbId'), '/frontendIpConfigurations/Frontend')]"
							},
							"backendAddressPool": {
								"id": "[concat(variables('lbId'), '/backendAddressPools/BackendPool')]"
							},
							"probe": {
								"id": "[concat(variables('lbId'), '/probes/lbprobe')]"
							},
							"protocol": "Tcp",
							"frontendPort": 80,
							"backendPort": 80,
							"enableFloatingIP": true,
							"idleTimeoutInMinutes": 15
						},
						"Name": "lbrule"
					}
				],
				"probes": [
					{
						"properties": {
							"protocol": "Tcp",
							"port": 80,
							"intervalInSeconds": 15,
							"numberOfProbes": 2
						},
						"name": "lbprobe"
					}
				]
			}
		},

		// Setup RouteTable
		{
			"apiVersion": "2015-06-15",
			"type": "Microsoft.Network/routeTables",
			"name": "[parameters('routeTableName')]",
			"dependsOn": [
				"[concat('Microsoft.Network/loadBalancers/',parameters('loadBalancerName'))]"
			],
			"location": "[parameters('location')]",
			"properties": {
				"routes": [
					{
						"name": "Default",
						"properties": {
							"addressPrefix": "0.0.0.0/0",
							"nextHopType": "VirtualAppliance", 
							"nextHopIpAddress": "[reference(resourceId('Microsoft.Network/loadBalancers/', parameters('loadBalancerName'))).frontendIPConfigurations[0].properties.privateIPAddress]"
						}
					}
				]
			}
		}

	]
}



